<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    
    <TextView
        android:id="@+id/tv_userInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text=""
        android:background="@color/colorTextViewInputButtonBG"
        android:textColor="@color/colorTextViewInputButtonTxt"
        android:textSize="35sp"
        android:layout_marginTop="2dp"
        android:gravity="end"/>

    <TextView
        android:id="@+id/tv_userResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="@color/colorTextViewResultButtonBG"
        android:textColor="@color/colorTextViewResultButtonTxt"
        android:gravity="end"
        android:text=""
        android:textSize="55sp"
        />

</LinearLayout>

